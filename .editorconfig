# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JSON-Files
[*.{json,json.twig}]
indent_style = tab

# ReST-Files
[*.rst]
indent_size = 3

# YAML-Files
[*.{yaml,yml,yaml.twig,yml.twig}]
indent_size = 2

# NEON-Files
[*.neon]
indent_size = 2
indent_style = tab
